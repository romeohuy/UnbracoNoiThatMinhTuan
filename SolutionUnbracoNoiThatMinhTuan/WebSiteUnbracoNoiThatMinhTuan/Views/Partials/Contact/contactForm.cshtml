@inherits UmbracoViewPage<ContactViewModel>

@using Umbraco.NoiThat.Core.ViewModels
@using Umbraco.NoiThat.Core.Controllers


<div id="form-outer">
    @using (Ajax.BeginForm("SubmitForm", "ContactSurface", new AjaxOptions()
    {
        UpdateTargetId = "form-result",
        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        OnSuccess = "contactForm.showResultSuccess",
        OnFailure = "contactForm.showResultFailed"
    }, new { id = "contact-form" }))
    {
        @Html.HiddenFor(m => m.ContactFormId)


        <span class="wpcf7-form-control-wrap your-name">
            @Html.TextBoxFor(m => m.Name, new { @class = "wpcf7-form-control", placeholder = "Name" + "..." })
            @Html.ValidationMessageFor(m => m.Name)
        </span>
        <span class="wpcf7-form-control-wrap your-phone">
            @Html.TextBoxFor(m => m.Phone, new { @class = "wpcf7-form-control", placeholder = "Phone" + "..." })
            @Html.ValidationMessageFor(m => m.Phone)
        </span>
        <span class="wpcf7-form-control-wrap your-email">
            @Html.TextBoxFor(m => m.Email, new { @class = "wpcf7-form-control", placeholder = "Email" + "..." })
            @Html.ValidationMessageFor(m => m.Email)
        </span>
        <span class="wpcf7-form-control-wrap your-subject">
            @Html.TextBoxFor(m => m.Subject, new { @class = "wpcf7-form-control", placeholder = "Subject" + "..." })
            @Html.ValidationMessageFor(m => m.Subject)
        </span>
        <span class="wpcf7-form-control-wrap your-message">
            @Html.TextAreaFor(m => m.Message, new { @class = "wpcf7-form-control", placeholder = "Message" + "...", rows = "6" })
            @Html.ValidationMessageFor(m => m.Message)
        </span>
        <span class="wrap-submit">
            <button type="submit" class="submit wpcf7-form-control wpcf7-submit" id="sendMessageButton">Send Us</button>
        </span>
    }
</div>
<div id="form-result"></div>