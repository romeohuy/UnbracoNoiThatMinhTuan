<div class="themesflat-headings style-1 text-center clearfix">
    <div class="themesflat-spacer clearfix" data-desktop="40" data-mobile="35" data-smobile="35"></div>
    <h2 class="home-heading heading">@Model.PageTitle</h2>
    <div class="sep has-icon width-125 clearfix">
        <div class="sep-icon">
            <span class="sep-icon-before sep-center sep-solid"></span>
            <span class="icon-wrap"><i class="autora-icon-build"></i></span>
            <span class="sep-icon-after sep-center sep-solid"></span>
        </div>
    </div>

</div>
<!-- SERVICES -->
<div class="row-services">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="themesflat-project style-2 isotope-project has-margin mg15 data-effect clearfix">
                    @foreach (var serviceDetail in serviceDetails)
                    {
                        <div class="project-item villa green">
                            <div class="inner">
                                <div class="thumb data-effect-item has-effect-icon w40 offset-v-19 offset-h-49">
                                    <a href="@serviceDetail.Url">
                                        @if (serviceDetail.PageMainImage != null)
                                        {
                                            <img src="@serviceDetail.PageMainImage.Url" alt="@serviceDetail.PageTitle">
                                        }
                                        else
                                        {
                                            <img src = "/themeassets/not-available.png" />
                                        }
                                    </a>
                                </div>
                                <div class="text-wrap">
                                    <h5 class="heading"><a href="@serviceDetail.Url">@serviceDetail.PageTitle</a></h5>
                                    @*<p>@serviceDetail.PageShortContent</p>*@
                                </div>
                            </div>
                        </div><!-- /.product-item -->
                    }
                </div><!-- /.themesflat-project -->

                <div class="themesflat-spacer clearfix" data-desktop="72" data-mobile="60" data-smobile="60"></div>
            </div><!-- /.col-md-12 -->
        </div><!-- /.row -->
    </div><!-- /.container -->
</div>
<!-- END SERVICES -->