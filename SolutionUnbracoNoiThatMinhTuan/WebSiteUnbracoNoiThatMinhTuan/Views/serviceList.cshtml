@using Umbraco.NoiThat.Core
@inherits Umbraco.Web.Mvc.UmbracoViewPage<Services>
@{
    Layout = "masterPage.cshtml";
    Page.Title = Model.PageTitle + " - " + "Nội Thất MTH";
    Page.MetaDescription = Model.MetaDescription;
    Page.MetaKeywords = string.Join(", ", Model.MetaKeywords.ToList());
    Page.BodyTagCss = "site-header-absolute";
}

@* the fun starts here *@
@{
    var serviceDetails = Model.Children.Cast<ServiceDetail>().ToList();
    var pageSize = 12;

    var page = 1;
    int.TryParse(Request.QueryString["page"], out page);
    var totalPages = (int)Math.Ceiling((double)serviceDetails.Count() / (double)pageSize);

    if (page > totalPages)
    {
        page = totalPages;
    }
    else if (page < 1)
    {
        page = 1;
    }

}

